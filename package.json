{
  "name": "@kurocado-studio/form-management-ui",
  "version": "0.0.0-semantically-released",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "commitlint": "pnpm exec commitlint --edit .git/COMMIT_EDITMSG",
    "clean": "rm -rf node_modules pnpm.lock dist",
    "dev": "vite",
    "eslint-check": "eslint --max-warnings=0 . --debug",
    "eslint-fix": "eslint --max-warnings=0 . --fix --no-warn-ignored",
    "lint": "eslint --max-warnings=0 . --no-warn-ignored",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --check . --write",
    "semantic-release": "semantic-release",
    "start": "remix-serve ./build/server/index.js",
    "test": "vitest run --coverage",
    "typecheck": "tsc",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build",
    "use:local-ui": "pnpm remove @kurocado-studio/ui && pnpm add @kurocado-studio/ui@file:../design-system/packages/ui",
    "use:remote-ui": "pnpm remove @kurocado-studio/ui && pnpm add @kurocado-studio/ui@latest",
    "use:remote-html-forms": "pnpm remove @kurocado-studio/html-forms && pnpm add @kurocado-studio/html-forms@file:../platform/teams/dev-experience/packages/html-forms",
    "use:local-html-forms": "pnpm remove @kurocado-studio/html-forms && pnpm add @kurocado-studio/html-forms@file:../platform/teams/dev-experience/packages/html-forms",
    "use:build-local-html-package": "cd ../platform/teams/dev-experience/packages/html-forms && pnpm build",
    "use:sync-local-html-package": "pnpm add @kurocado-studio/html-forms@file:../platform/teams/dev-experience/packages/html-forms",
    "ui:local:sync": "cd ../../../design-system/packages/ui && pnpm run build && cd - && pnpm install @kurocado-studio/ui-research-and-development@file:../../../design-system/packages/ui"
  },
  "lint-staged": {
    "*": ["pnpm run prettier-fix"],
    "**/*.{ts,tsx}": ["pnpm run eslint-fix", "pnpm run lint"]
  },
  "dependencies": {
    "@kurocado-studio/html-forms": "file:../platform/teams/dev-experience/packages/html-forms",
    "@kurocado-studio/ui-research-and-development": "1.0.0-develop.2",
    "framer-motion": "^12.6.2",
    "isbot": "^5.1.25",
    "lodash-es": "^4.17.21",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@kurocado-studio/qa": "2.0.0-alpha.2",
    "@kurocado-studio/styleguide": "2.3.3",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/theming": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.0",
    "@types/react": "18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "autoprefixer": "^10.4.21",
    "commitlint": "^19.8.0",
    "eslint": "^9.23.0",
    "eslint-plugin-storybook": "^0.12.0",
    "husky": "^9.1.7",
    "import": "^0.0.6",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "semantic-release": "^23.1.1",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20"
  },
  "eslintConfig": {
    "extends": ["plugin:storybook/recommended"]
  }
}
